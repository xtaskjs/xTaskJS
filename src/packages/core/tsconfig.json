{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths":{
      "@xtaskjs/common": ["../../dist/packages/common"],
      "@xtaskjs/common/*": ["../../dist/packages/common/*"]
    },
    "declaration": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}